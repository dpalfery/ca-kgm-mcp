{
  "name": "context-iso",
  "version": "1.0.0",
  "description": "ContextISO - Context Isolation & Optimization MCP server bringing clarity to LLM context through targeted knowledge graphs",
  "main": "dist/index.js",
  "type": "module",
  "scripts": {
    "build": "tsc",
    "build:watch": "tsc --watch",
    "dev": "tsx src/index.ts",
    "start": "node dist/index.js",
    "test": "vitest --run",
    "test:watch": "vitest",
    "test:unit": "vitest --run src/**/*.test.ts",
    "test:integration": "vitest --run src/integration.test.ts",
    "test:all": "vitest --run",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix",
    "clean": "rimraf dist",
    "sync-knowledge": "tsx kgm-query-tool/knowledge-graph-crawler.ts",
    "sync-knowledge:debug": "tsx --inspect-brk kgm-query-tool/knowledge-graph-crawler.ts",
    "sync-knowledge:ai": "tsx kgm-query-tool/ai-enhanced-knowledge-graph-crawler.ts",
    "sync-knowledge:ai:debug": "tsx --inspect-brk kgm-query-tool/ai-enhanced-knowledge-graph-crawler.ts"
  },
  "keywords": [
    "mcp",
    "memory",
    "knowledge-graph",
    "ai-assistant",
    "rules",
    "context"
  ],
  "author": "ContextISO Team",
  "license": "MIT",
  "dependencies": {
    "@modelcontextprotocol/sdk": "^0.5.0",
    "@types/marked": "^5.0.2",
    "gray-matter": "^4.0.3",
    "marked": "^16.4.0",
    "neo4j-driver": "^5.15.0",
    "node-fetch": "^3.3.2",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "@typescript-eslint/eslint-plugin": "^6.13.0",
    "@typescript-eslint/parser": "^6.13.0",
    "eslint": "^8.54.0",
    "rimraf": "^5.0.5",
    "tsx": "^4.6.0",
    "typescript": "^5.3.0",
    "vitest": "^3.2.4"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "bin": {
    "context-iso": "./dist/index.js"
  }
}
